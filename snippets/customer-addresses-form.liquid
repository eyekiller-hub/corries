{% assign address = _address %}

{% form 'customer_address', address %}
  <div>
    <div class="margin-bottom--down-1">
      <label class="block margin-bottom--down-4" for="AddressFirstName_{{ form.id }}">
        {{ 'customer.addresses.first_name' | t }}
      </label>

      <input
        class="input border-radius--none large--padding-top-bottom--down-1"
        type="text"
        name="address[first_name]"
        id="AddressFirstName_{{ form.id }}"
        value="{{ form.first_name }}"
        autocapitalize="words" />
    </div>

    <div class="margin-bottom--down-1">
      <label class="block margin-bottom--down-4" for="AddressLastName_{{ form.id }}">
        {{ 'customer.addresses.last_name' | t }}
      </label>

      <input
        class="input border-radius--none large--padding-top-bottom--down-1"
        type="text"
        name="address[last_name]"
        id="AddressLastName_{{ form.id }}"
        value="{{ form.last_name }}"
        autocapitalize="words" />
    </div>

    <div class="margin-bottom--down-1">
      <label class="block margin-bottom--down-4" for="AddressCompany_{{ form.id }}">
        {{ 'customer.addresses.company' | t }}
      </label>

      <input
        class="input border-radius--none large--padding-top-bottom--down-1"
        type="text"
        name="address[company]"
        id="AddressCompany_{{ form.id }}"
        value="{{ form.company }}"
        autocapitalize="words" />
    </div>

    <div class="margin-bottom--down-1">
      <label class="block margin-bottom--down-4" for="AddressAddress1_{{ form.id }}">
        {{ 'customer.addresses.address1' | t }}
      </label>

      <input
        class="input border-radius--none large--padding-top-bottom--down-1"
        type="text"
        name="address[address1]"
        id="AddressAddress1_{{ form.id }}"
        value="{{ form.address1 }}"
        autocapitalize="words" />
    </div>

    <div class="margin-bottom--down-1">
      <label class="block margin-bottom--down-4" for="AddressAddress2_{{ form.id }}">
        {{ 'customer.addresses.address2' | t }}
      </label>

      <input
        class="input border-radius--none large--padding-top-bottom--down-1"
        type="text"
        name="address[address2]"
        id="AddressAddress2_{{ form.id }}"
        value="{{ form.address2 }}"
        autocapitalize="words" />
    </div>

    <div class="margin-bottom--down-1">
      <label class="block margin-bottom--down-4" for="AddressCity_{{ form.id }}">
        {{ 'customer.addresses.city' | t }}
      </label>

      <input
        class="input border-radius--none large--padding-top-bottom--down-1"
        type="text"
        name="address[city]"
        id="AddressCity_{{ form.id }}"
        value="{{ form.city }}"
        autocapitalize="words" />
    </div>

    <div data-module-country-province-selector='{
      "country": {{ form.country | json }},
      "province": {{ form.province | json }}
    }'>
      <div class="margin-bottom--down-1">
        <label class="block margin-bottom--down-4" for="AddressCountry_{{ form.id }}">
          {{ 'customer.addresses.country' | t }}
        </label>

        <div class="select-wrap border-radius--none">
          <select
            class="select border-radius--none"
            name="address[country]"
            id="AddressCountry_{{ form.id }}"
            data-ref-country>
            {{ country_option_tags }}
          </select>
        </div>
      </div>

      <div class="margin-bottom--down-1" data-ref-province-wrap>
        <label class="block margin-bottom--down-4" for="AddressProvince_{{ form.id }}">
          {{ 'customer.addresses.province' | t }}
        </label>

        <div class="select-wrap border-radius--none">
          <select
            class="select border-radius--none"
            name="address[province]"
            id="AddressProvince_{{ form.id }}"
            data-ref-province>
          </select>
        </div>
      </div>
    </div>

    <div class="margin-bottom--down-1">
      <label class="block margin-bottom--down-4" for="AddressZip_{{ form.id }}">
        {{ 'customer.addresses.zip' | t }}
      </label>

      <input
        class="input border-radius--none large--padding-top-bottom--down-1"
        type="text"
        name="address[zip]"
        id="AddressZip_{{ form.id }}"
        value="{{ form.zip }}"
        autocapitalize="characters" />
    </div>

    <div class="margin-bottom--down-1">
      <label class="block margin-bottom--down-4" for="AddressPhone_{{ form.id }}">
        {{ 'customer.addresses.phone' | t }}
      </label>

      <input
        class="input border-radius--none large--padding-top-bottom--down-1"
        type="tel"
        name="address[phone]"
        id="AddressPhone_{{ form.id }}"
        value="{{ form.phone }}"
        pattern="[0-9\-]*" />
    </div>
  </div>

  <div class="margin-bottom--up-2">
    <label class="block cursor-pointer" for="address_default_address_{{ form.id }}">
      <span class="flex-bar--down-1">
        <span class="flex-item-shrink">
          <span class="checkbox-wrap font-size--0">
            {{ form.set_as_default_checkbox | replace: '<input', '<input class="checkbox"' }}

            <span class="checkbox-icon">
              {% include 'svg-tick' %}
            </span>
          </span>
        </span>

        <span class="flex-item-shrink">
          <span>
            {{ 'customer.addresses.set_default' | t }}
          </span>
        </span>
      </span>
    </label>
  </div>

  <button
    class="
      button-primary
      large--padding-top-bottom--down-1 large--padding-left-right--up-4
      large--font-size--inherit large--line-height--inherit
    "
    type="submit">
    {{ 'customer.addresses.save' | t }}
  </button>
{% endform %}
