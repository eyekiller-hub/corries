{% assign google_analytics_id = settings.google_analytics_id | default: false %}

{% if google_analytics_id %}
  <amp-analytics type="gtag" data-credentials="include">
    <script type="application/json">
      {
        "vars" : {
          "gtag_id": {{ google_analytics_id | json }},
          "config" : {
            {{ google_analytics_id | json }}: { "groups": "default" }
          }
        }
      }
    </script>
  </amp-analytics>
{% endif %}
