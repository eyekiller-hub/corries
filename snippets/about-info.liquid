{% assign spacing_top_enable = block.settings.spacing_top_enable | default: false %}

{% assign spacing_bottom_enable = block.settings.spacing_bottom_enable | default: false %}

{% assign title = block.settings.title | default: false %}

{% assign copy = block.settings.copy | default: false %}

<section
  class="
    about-section
    {% if spacing_top_enable %}about-section--spacing-top{% endif %}
    {% if spacing_bottom_enable %}about-section--spacing-bottom{% endif %}
  ">
  <div class="box-color-navy text-color-light">
    <div class="padding-top-bottom--up-3 large--padding-top-bottom--up-6">
      <div class="container-default">
        <div class="box-center" style="max-width: 800px;">
          <div class="text-center">
            {% if title %}
              <h3 class="
                font-size--up-4
                large--font-size--up-5
                large--font-size--up-8 large--line-height--up-10
                font-weight-700 text-caps text-color-inherit
                margin-bottom--0
              ">
                {{ title }}
              </h3>
            {% endif %}

            {% if copy %}
              <div class="rte large--font-size--up-2 large--line-height--up-10">
                {{ copy }}
              </div>
            {% endif %}
          </div>
        </div>

        <div class="margin-top--up-2 large--margin-top--up-4">
          <ul class="flex--up-1 large--flex--up-2 margin-bottom--none">
            {% for i in (1..3) %}
              {% assign block = i %}

              {% assign block_image = 'image_' | append: i %}
              {% assign block_image = block.settings[block_image] | default: false %}

              {% unless block_image %}
                {% continue %}
              {% endunless %}

              <li class="flex-item">
                {%
                  include 'image',
                  _object: block_image,
                  _size: '600x'
                %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
