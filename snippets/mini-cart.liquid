{% assign empty_body = mini_cart_empty_body %}

<div class="mini-cart" data-module-mini-cart='{ "reveal_timeout": 5000 }'>
  <div class="box-color-mini-cart-background text-color-mini-cart-text">
    <div class="padding--down-1">
      <h1 class="font-size--h4 line-height--h4 text-transform--h4 letter-spacing--h4 text-center margin-bottom--0">
        {{ 'cart.title' | t }}
      </h1>

      {% if cart.items != empty %}
        {% include 'cart-form', _mini_cart: true %}
      {% else %}
        {% include 'cart-empty' %}
      {% endif %}
    </div>
  </div>
</div>
