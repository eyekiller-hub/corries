<button
  class="
    input-reset
    font-weight-500 text-color-green hover-text-color-green-active
  "
  type="button"
  data-ref-button='{ "index": "new" }'>
  <span class="text-underline">
    {{ 'customer.addresses.new' | t }}
  </span>
</button>

<div style="display: none;" data-ref-panel='{ "index": "new" }'>
  {% form 'customer_address', customer.new_address %}
    <div class="margin-top--up-2 large--margin-top--up-4">
      {% include 'customer-addresses-form', _address: customer.new_address %}
    </div>
  {% endform %}
</div>

{% for address in customer.addresses %}
  <div style="display: none;" data-ref-panel='{ "index": {{ address.id | json }} }'>
    <div class="margin-top--up-2 large--margin-top--up-4">
      {% include 'customer-addresses-form', _address: address %}
    </div>
  </div>
{% endfor %}
