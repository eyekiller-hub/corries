<amp-carousel width="{{ product.images[0].width }}" height="{{ product.images[0].height }}" layout="responsive" type="slides" lightbox>
  {% for image in product.images %}
    {% assign image_url = image | img_url: '1000x' %}

    <amp-img
      src="{{ image_url }}"
      width="{{ image.width }}"
      height="{{ image.height }}"
      layout="intrinsic"
      alt="{{ image.alt | escape }}"></amp-img>
  {% endfor %}
</amp-carousel>
