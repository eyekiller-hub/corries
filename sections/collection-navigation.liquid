      {
        "type": "header",
        "content": "Sort - Price, low to high"
      },
      {
        "type": "checkbox",
        "id": "sort_enabled_5",
        "label": "Enable?",
        "default": true
      },
      {
        "type": "text",
        "id": "sort_title_5",
        "label": "Title",
        "default": "Price, low to high"
      },
      {
        "type": "header",
        "content": "Sort - Price, high to low"
      },
      {
        "type": "checkbox",
        "id": "sort_enabled_6",
        "label": "Enable?",
        "default": true
      },
      {
        "type": "text",
        "id": "sort_title_6",
