      {
        "type": "text",
        "id": "sort_title_8",
        "label": "Title",
        "default": "Date, old to new"
      }
    ]
  }
{% endschema %}

{% assign menu_enable = section.settings.menu_enable | default: false %}

{% assign menu = section.settings.menu %}
{% assign menu = menus[menu] | default: false %}

{% assign sort_enable = section.settings.sort_enable | default: false %}

{% if menu_enable or sort_enable %}
  <div class="padding-top--up-2 large--padding-top--up-4">
    <div class="container-default">
      <div class="overflow-hidden">
        <div class="large--flex-bar--up-1 large--flex-space-between margin-bottom-negative--up-1">
          {% if menu_enable %}
            <div class="large--flex-item-shrink padding-bottom--up-1">
              {% include 'collection-menu' %}
            </div>
          {% endif %}

          {% if sort_enable %}
            <div class="large--flex-item-shrink padding-bottom--up-1">
              {% include 'collection-sort' %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endif %}
