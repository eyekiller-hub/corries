{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Image (mobile)"
      },
      {
        "type": "range",
        "id": "image_overlay",
        "label": "Image overlay",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "default": 0
      },
      {
        "type": "select",
        "id": "text_color",
        "label": "Text color",
        "options": [
          { "label": "Light", "value": "light" },
          { "label": "Dark", "value": "dark" }
        ]
      },
      {
        "type": "text",
        "id": "height",
        "label": "Height",
        "info": "Leave blank to use aspect ratio of the image uploaded. Use a length of any valid unit ('500px', '15%' etc.). Use 'full' to fit the browser viewport height."
      },
      {
        "type": "text",
        "id": "height_mobile",
        "label": "Height (mobile)",
        "info": "Leave blank to use aspect ratio of the image uploaded. Use a length of any valid unit ('500px', '15%' etc.). Use 'full' to fit the browser viewport height."
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Alignment",
        "options": [
          { "label": "Left", "value": "left" },
          { "label": "Center", "value": "center" },
          { "label": "Right", "value": "right" }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "info": "Use the placeholder \"{{ page_title }}\" and it'll be replaced with the current page title."
      },
      {
        "type": "richtext",
        "id": "body",
        "label": "Body"
      },
      {
        "type": "url",
        "id": "url",
        "label": "URL"
      },
      {
        "type": "text",
        "id": "call_to_action",
        "label": "Call to action"
      }
    ]
  }
{% endschema %}

{% include 'attribute-request-amp' %}

{% assign image = section.settings.image | default: false %}
{% assign image_url = image | img_url: "2000x" %}

{% assign image_mobile = section.settings.image_mobile | default: image %}
{% assign image_mobile_url = image_mobile | img_url: "1000x" %}

{% assign image_overlay = section.settings.image_overlay | divided_by: 100.0 | default: false %}

{% assign text_color = section.settings.text_color | default: false %}

{% assign height = section.settings.height | default: false %}

{% assign height_mobile = section.settings.height_mobile | default: false %}

{% assign alignment = section.settings.alignment | default: false %}

{% assign title = section.settings.title | default: false %}

{% assign body = section.settings.body | default: false %}

{% assign url = section.settings.url | default: false %}

{% assign call_to_action = section.settings.call_to_action | default: false %}

{%
  include 'hero'
  _id: section.id
  _image: image
  _image_url: image_url
  _image_mobile: image_mobile
  _image_mobile_url: image_mobile_url
  _image_overlay: image_overlay
  _text_color: text_color
  _height: height
  _height_mobile: height_mobile
  _alignment: alignment
  _title: title
  _body: body
  _url: url
  _call_to_action: call_to_action
%}
