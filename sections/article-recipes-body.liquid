<div class="container-default">
  {% include 'breadcrumbs' %}

  <div class="box-center" style="max-width: 700px;">
    <div class="rte rte--page rte--article rte--recipe" data-module-rte>
      <h1 class="text-center">
        {{ article.title }}
      </h1>

      {% include 'article-recipes-info' %}

      {{ article.content }}
    </div>

    {% include 'social-share' %}
  </div>
</div>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Recipe",
  "author": "Corries",
  "name": "{{ article.title }}"
}
</script>

{% schema %}
  {
    "name": "Article recipes body"
  }
{% endschema %}
