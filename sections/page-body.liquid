{% schema %}
  {
    "name": "Page body",
    "settings": []
  }
{% endschema %}

{% assign body = section.settings.body | default: false %}

<div class="padding-top-bottom--up-2 large--padding-top-bottom--up-4">
  <div class="container-default">
    <h1 class="font-size--h4 line-height--h4 text-transform--h4 letter-spacing--h4 margin-bottom--0">
      {{ page.title }}
    </h1>

    {% if page.content %}
      <div class="rte">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</div>
